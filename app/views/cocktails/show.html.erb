<div class="container">
	
	<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= cl_image_path @cocktail.photo, height: 300, width: 400, crop: :fill %>');">
		<div class="banner-content">
			<h1> <%= @cocktail.name %></h1>
		</div>
	</div>

	<div class="row">
		<div class="col-xs-12 col-sm-6 col-sm-offset-1">
		<div class ="list-ingredients">
			<h2> List of ingredients </h2>
			<% @cocktail.doses.each do |dose| %>
			<li> <%= dose.description %> of <%= dose.ingredient.name %>
			<%= link_to "Delete", dose_path(dose), method: :delete %> </li>
		<% end %>
		</div>
		</div>
	
		<div class="col-xs-12 col-sm-4">
		<div class="form">
		<h4>Add a dose to this cocktail</h4>
			<%= simple_form_for [@cocktail, @dose] do |f| %>
			<%= f.error_notification %>
			<%= f.input :description %>
			<%= f.association :ingredient %>
			<%= f.submit %>
			<% end %>
		</div>
		</div>
	</div>
	
	<div class="row button-add">
	 <%= link_to "Back to the list", cocktails_path, class: "btn btn-danger" %> </div>
	</div>

</div>
