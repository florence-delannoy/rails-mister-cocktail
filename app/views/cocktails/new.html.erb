<div class="container">
	<div class="row">
		<div class="col-xs-12 col-sm-6 col-sm-offset-3">
			<div class="form">
				<%= simple_form_for(@cocktail) do |f| %>
				<%= f.input :name %>
				<%= f.input :photo %>
				<%= f.input :photo_cache, as: :hidden %>
				<%= f.submit %>
				<% end %>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-xs-12 col-sm-6 col-sm-offset-3">
			<div class="row button-add">
			<%= link_to "Back to the list", cocktails_path, class: "btn btn-danger" %> </div>
		</div>
	</div>
</div>